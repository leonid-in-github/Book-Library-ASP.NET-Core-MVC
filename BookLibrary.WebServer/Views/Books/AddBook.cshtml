@model BookLibrary.WebServer.Models.Books.AddBookModel

@{
    ViewData["Title"] = "Add book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <h1 class="display-4">@ViewData["Title"] page</h1>
    <hr class="jumbotron-hr" />
    <div class="row">
        <div class="w-100">
            <form asp-controller="Books" asp-action="AddBook" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <span asp-validation-for="AddBookMessage" class="text-danger"></span>
                @await Html.PartialAsync("~/Views/Books/BookView.cshtml", Model)
                <div class="form-group container">
                    <input type="submit" value="Add" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>